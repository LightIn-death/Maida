            </a>
            <div class="collapse navbar-collapse">
                <ul class="navbar-nav mr-auto ml-0">
                    {% if app.user %}
                        <li><a class="nav-link" href="{{ path('dashboard') }}"><i class="fas fa-home"></i> Dashboard</a></li>
                        <li><a class="nav-link" href="{{ path('dettes') }}"><i class="fas fa-money-check-alt"></i> Dettes</a></li>
                        <li><a class="nav-link" href="{{ path('add_new_debt') }}"><i class="far fa-plus-square"></i> Nouvelle Dette</a></li>
                    {% endif %}
                </ul>
                <ul class="navbar-nav">
                    {% if app.user %}
                        <li class="nav-link"><i class="fas fa-user"></i> {{ app.user.name }}</li>
                        <li><a class="nav-link" href="{{ path('app_logout') }}"><i class="fas fa-sign-out-alt"></i> DÃ©connexion</a></li>
                    {% else %}
                        <li><a class="nav-link" href="{{ path('app_login') }}"><i class="fas fa-sign-in-alt"></i> Connexion</a></li>
                        <li><a class="nav-link" href="{{ path('registration') }}"><i class="fas fa-user-edit"></i> Inscription</a></li>
                    {% endif %}
                </ul>
            </div>
        </nav>
        {% block body %}
        {% endblock %}
        {% block javascripts %}{% endblock %}
    </body>
</html>





